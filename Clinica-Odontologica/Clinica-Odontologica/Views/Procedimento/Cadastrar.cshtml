@model Clinica_Odontologica.Models.Procedimento

@{
    ViewData["Title"] = "Cadastrar";
}

<h1>Cadastrar Procedimento</h1>
@if (ViewData["exibirAlert"] != null && (bool)ViewData["exibirAlert"] == true)
{
    <div class="alert alert-success" role="alert">
        Paciente cadastrado com sucesso
    </div>
}
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Cadastrar">
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Home">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
